<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
             http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">

    <persistence-unit name="PeliculasPU" transaction-type="RESOURCE_LOCAL">
        <provider>com.objectdb.jpa.Provider</provider>

        <class>org.example.retodos.models.Pelicula</class>
        <class>org.example.retodos.models.Copia</class>
        <class>org.example.retodos.models.Usuario</class>

        <properties>
            <property name="javax.persistence.jdbc.url" value="objectdb:db/peliculas.odb"/>
            <property name="javax.persistence.jdbc.user" value="admin"/>
            <property name="javax.persistence.jdbc.password" value="admin"/>
        </properties>
    </persistence-unit>
</persistence>